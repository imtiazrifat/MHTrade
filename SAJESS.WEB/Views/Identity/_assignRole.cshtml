    <div class="col-md-12">
        <h2>Assign Role</h2>
        @using (Html.BeginForm("RegisterRole", "Identity", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.AntiForgeryToken()

            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.Label("Select Role ", new { @class = "col-md-2" })

                                <div class="col-md-4">
                                    @Html.DropDownList("Name", null, new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.Label("Select User", new { @class = "col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("UserName", null, new { @class = "form-control" })


                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-mid-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="Register" />
                                </div>
                            </div>
        }


    </div>
