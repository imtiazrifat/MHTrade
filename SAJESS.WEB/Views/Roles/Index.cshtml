
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Create Roles","Create","Roles")
    </table>
</section>



<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Assign roles to users", "RegisterRole", "Identity")
    </table>
</section>


<br/>


<table class="table table-bordered table-hover">
    <tr>
        <th class="c">
            Role Name:
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="c">
                @item.Name
            </td>
        </tr>
    }
</table>